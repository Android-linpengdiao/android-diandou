<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/background</item>
    </style>

    <style name="PopupAnimation" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/popup_enter</item>
        <item name="android:windowExitAnimation">@anim/popup_exit</item>
    </style>

    <!--设置Tablayout字体大小-->
    <style name="TabLayoutTextSize13">
        <item name="android:textSize">13sp</item>
    </style>
    <!--设置Tablayout字体大小-->
    <style name="TabLayoutTextSize15">
        <item name="android:textSize">16sp</item>
    </style>
    <!--设置Tablayout字体大小-->
    <style name="TabLayoutTextSize20">
        <item name="android:textSize">20sp</item>
    </style>
    <!--设置Tablayout字体加粗-->
    <style name="TabLayoutSelectedTextStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!--设置Tablayout字体加粗-->
    <style name="TabLayoutUnselectedTextStyle">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
